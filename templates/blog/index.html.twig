{% extends 'base.html.twig' %}

{% block title %}Hello BlogController!{% endblock %}

{% block body %}

{% for article in articles %}
   <section class="articles">
    <article>
      <h2>{{ article.title }}</h2>
      <div class="metadata">Ecrit le {{ article.createdAt | date('d/m/y')}} Ã  {{article.createdAt | date('h:i')}} 
      dans le cadre politique</div>
      <div class="content">
        <img src="{{ article.image }}" alt=""></br>
        {{ article.content | raw }}</br>
        <a href="{{ path('blog_show',{'id':article.id}) }}" class="btn btn-primary">lire la suite</a>
        <a href="{{ path('blog_edit',{'id':article.id}) }}" class="btn btn-warning">Modifier</a>
        <a onclick="if(!confirm('Vous-voulez vraiment supprimer ?')) { return false; }" href="{{ path('blog_delete',{'id':article.id}) }}" class="btn btn-danger">Supprimer</a>
        
      </div>
    </article>

{% endfor %}    
   
{% endblock %}